{
  "name": "gateway",
  "version": "1.0.0",
  "description": "API Gateway for Booking System with rate limiting, load balancing, and gRPC client",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:local": "./scripts/dev-local.sh",
    "dev:docker": "docker-compose -f ../deploy/docker-compose.dev.yml up gateway",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "grpc:generate": "protoc --js_out=import_style=commonjs,binary:./src/proto --grpc_out=./src/proto --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin protos/*.proto",
    "docker:build": "docker build -t booking-system/gateway .",
    "docker:run": "docker run -p 3000:3000 booking-system/gateway",
    "infra:start": "docker-compose -f ../deploy/docker-compose.dev.yml up -d",
    "infra:stop": "docker-compose -f ../deploy/docker-compose.dev.yml down",
    "infra:logs": "docker-compose -f ../deploy/docker-compose.dev.yml logs -f",
    "install:yarn": "yarn install",
    "add": "yarn add",
    "add:dev": "yarn add -D"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "express-winston": "^4.2.0",
    "@grpc/grpc-js": "^1.9.9",
    "@grpc/proto-loader": "^0.7.7",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "prom-client": "^15.1.0",
    "express-prom-bundle": "^7.0.0",
    "opossum": "^8.2.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "grpc",
    "express",
    "rate-limiting",
    "load-balancing"
  ],
  "author": "Booking System Team",
  "license": "MIT"
}
