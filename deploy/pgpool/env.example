# PgPool-II Environment Variables
# Copy this file to .env and update the values

# PgPool-II Auth Database
PGPOOL_AUTH_HOST=pgpool-auth
PGPOOL_AUTH_PORT=5432
PGPOOL_AUTH_PCP_PORT=9898

# PgPool-II Event Database
PGPOOL_EVENT_HOST=pgpool-event
PGPOOL_EVENT_PORT=5432
PGPOOL_EVENT_PCP_PORT=9899

# PgPool-II Ticket Database
PGPOOL_TICKET_HOST=pgpool-ticket
PGPOOL_TICKET_PORT=5432
PGPOOL_TICKET_PCP_PORT=9900

# Database Credentials
DB_USER=postgres
DB_PASSWORD=postgres_password

# Database Names
DB_AUTH_NAME=booking_system_auth
DB_EVENT_NAME=booking_system_event
DB_TICKET_NAME=booking_system_ticket

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# SSL Settings
NODE_ENV=development

