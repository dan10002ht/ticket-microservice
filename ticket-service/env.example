# Ticket Service Environment Configuration

# Server Configuration
PORT=3003
HOST=0.0.0.0
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=booking_system_ticket
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_SSL_MODE=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=1m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# gRPC Configuration
GRPC_PORT=50053
GRPC_MAX_RECEIVE_MSG_SIZE=4194304
GRPC_MAX_SEND_MSG_SIZE=4194304
GRPC_KEEPALIVE_TIME=30s
GRPC_KEEPALIVE_TIMEOUT=5s
GRPC_KEEPALIVE_PERMIT_WITHOUT_STREAM=true

# External Services (gRPC)
EVENT_SERVICE_HOST=localhost
EVENT_SERVICE_PORT=50051
PAYMENT_SERVICE_HOST=localhost
PAYMENT_SERVICE_PORT=50054

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Booking Configuration
BOOKING_SESSION_TIMEOUT=15m
SEAT_RESERVATION_TIMEOUT=15m
MAX_SEATS_PER_BOOKING=10
MIN_SEATS_PER_BOOKING=1

# Payment Configuration
PAYMENT_TIMEOUT=10m
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY=5s

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=2s

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Development Configuration
NODE_ENV=development
DEBUG=false