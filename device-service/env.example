# Server Configuration
PORT=50052
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=booking_system_device
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Device Service Configuration
MAX_SESSIONS_PER_USER=5
SESSION_EXPIRY_HOURS=24
DEVICE_TRUST_THRESHOLD=70
DEVICE_SUSPICIOUS_THRESHOLD=30

# Security Service Integration
SECURITY_SERVICE_URL=localhost:50053
SECURITY_SERVICE_TIMEOUT=5000

# Auth Service Integration
AUTH_SERVICE_URL=localhost:50051
AUTH_SERVICE_TIMEOUT=5000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/device-service.log

# Device Fingerprinting
FINGERPRINT_SALT=your-fingerprint-salt-key
GEOIP_ENABLED=true

# Session Management
SESSION_CLEANUP_INTERVAL=3600000
SESSION_CLEANUP_BATCH_SIZE=100

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000 